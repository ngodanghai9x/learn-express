{
  "name": "express-ts",
  "version": "1.0.0",
  "description": "https://developer.okta.com/blog/2018/11/15/node-express-typescript",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "yarn clean && yarn lint && yarn tsc && yarn copy-assets",
    "dev:start": "yarn build && yarn start",
    "dev": "nodemon --watch src -e ts,ejs --exec yarn dev:start",
    "prestart": "yarn build",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "ngodanghai9x",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "path": "^0.12.7",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@types/shelljs": "^0.8.11",
    "nodemon": "^2.0.20",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4"
  }
}
